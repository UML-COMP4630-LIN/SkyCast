<?xml version="1.0" encoding="utf-8"?>
<!--
This XML file defines an alpha (fade-in) animation.
transitions the alpha (opacity) of a view from completely transparent (0.0)
to fully opaque (1.0) over a duration of 500 milliseconds.
-->

<alpha xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="500"
    android:fromAlpha="0.0"
    android:toAlpha="1.0" />
