<?xml version="1.0" encoding="utf-8"?>
<!--
This XML layout defines the UI for the ProfileFragment in portrait orientation.
It displays a scrollable view featuring a mission statement, team member profiles, and their details.
Each section includes a title, profile picture, and descriptions for team members.
-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/help_background"
    tools:context=".ProfileFragment">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

              <TextView
                  android:id="@+id/mission_statement"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:layout_marginStart="10dp"
                  android:layout_marginEnd="10dp"
                  android:gravity="center"
                  android:fontFamily="@font/quicksand"
                  android:justificationMode="inter_word"
                  android:padding="16dp"
                  android:text="@string/missionStatement"
                  android:textColor="@color/white"
                  android:textSize="20sp"
                  android:textStyle="bold"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent" />

              <TextView
                  android:id="@+id/header"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="10dp"
                  android:layout_marginEnd="10dp"
                  android:layout_marginBottom="10dp"
                  android:padding="10dp"
                  android:text="@string/profileHeader"
                  android:textColor="@color/white"
                  android:textSize="35sp"
                  android:textStyle="bold"
                  android:fontFamily="@font/quicksand"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/mission_statement" />
              <TextView
                  android:id="@+id/theodor_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="10dp"
                  android:padding="10dp"
                  android:text="@string/theodor_farag"
                  android:textColor="@color/white"
                  android:textSize="25sp"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/header" />

              <de.hdodenhof.circleimageview.CircleImageView
                  android:id="@+id/theodor_image"
                  android:layout_width="110dp"
                  android:layout_height="110dp"
                  android:layout_marginEnd="20dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="20dp"
                  android:layout_marginStart="10dp"

                  android:src="@drawable/farag"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/theodor_title" />

              <TextView
                  android:id="@+id/theodor_description"
                  android:layout_width="270dp"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="10dp"
                  android:justificationMode="inter_word"
                  android:text="@string/theo_description1"
                  android:textSize = "20sp"
                  android:textColor="@color/white"
                  android:textStyle="bold"
                  android:fontFamily="@font/quicksand"

                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toEndOf="@+id/theodor_image"
                  app:layout_constraintTop_toBottomOf="@id/theodor_title" />

              <TextView
                  android:id="@+id/theodor_description2"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="16dp"
                  android:layout_marginEnd="10dp"
                  android:paddingRight = "5dp"
                  android:justificationMode="inter_word"
                  android:text="@string/theo_description2"
                  android:textSize = "20sp"
                  android:textColor="@color/white"
                  android:textStyle="bold"
                  android:fontFamily="@font/quicksand"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/theodor_description" />

              <TextView
                  android:id="@+id/angelos_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="10dp"
                  android:paddingStart="10dp"
                  android:paddingEnd="10dp"
                  android:paddingBottom="10dp"
                  android:text="@string/angelos_boules"
                  android:textColor="@color/white"
                  android:textSize="25sp"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/theodor_description2" />

              <de.hdodenhof.circleimageview.CircleImageView
                  android:id="@+id/angelos_image"
                  android:layout_width="110dp"
                  android:layout_height="110dp"
                  android:layout_marginEnd="8dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="20dp"
                  android:src="@drawable/angelos"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toEndOf="@id/angelos_description1"
                  app:layout_constraintTop_toBottomOf="@id/angelos_title" />

              <TextView
                  android:id="@+id/angelos_description1"
                  android:layout_width="270dp"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="16dp"
                  android:justificationMode="inter_word"
                  android:text="@string/angelos_description1"
                  android:textSize = "20sp"
                  android:textColor="@color/white"
                  android:textStyle="bold"
                  android:fontFamily="@font/quicksand"
                  app:layout_constraintEnd_toStartOf="@id/angelos_image"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/angelos_title" />

              <TextView
                  android:id="@+id/angelos_description2"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="16dp"
                  android:layout_marginEnd="16dp"
                  android:justificationMode="inter_word"
                  android:text="@string/angelos_description2"
                  android:textSize = "20sp"
                  android:textColor="@color/white"
                  android:textStyle="bold"
                  android:fontFamily="@font/quicksand"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/angelos_description1" />

              <TextView
                  android:id="@+id/afsa_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/white"
                  android:layout_margin="10dp"
                  android:paddingStart="10dp"
                  android:paddingEnd="10dp"
                  android:paddingBottom="10dp"
                  android:text="@string/afsa_nafe"
                  android:textSize="25sp"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/angelos_description2" />

              <de.hdodenhof.circleimageview.CircleImageView
                  android:id="@+id/afsa_image"
                  android:layout_width="110dp"
                  android:layout_height="110dp"
                  android:layout_marginEnd="20dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="20dp"
                  android:layout_marginStart="10dp"
                  android:src="@drawable/afsa"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/afsa_title" />

              <TextView
                  android:id="@+id/afsa_description"
                  android:layout_width="270dp"
                  android:layout_height="wrap_content"
                  android:layout_marginEnd="16dp"
                  android:justificationMode="inter_word"
                  android:text="@string/afsa_description1"
                  android:textSize = "20sp"
                  android:textColor="@color/white"
                  android:textStyle="bold"
                  android:fontFamily="@font/quicksand"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toEndOf="@id/afsa_image"
                  app:layout_constraintTop_toBottomOf="@id/afsa_title" />

              <TextView
                  android:id="@+id/afsa_description2"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="16dp"
                  android:layout_marginEnd="10dp"
                  android:paddingRight = "5dp"
                  android:justificationMode="inter_word"
                  android:text="@string/afsa_description2"
                  android:textSize = "20sp"
                  android:textColor="@color/white"
                  android:textStyle="bold"
                  android:fontFamily="@font/quicksand"
                  android:paddingBottom="10dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/afsa_description" />

       </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>